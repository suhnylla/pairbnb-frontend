<nav class="menu">
  <ul class="active">
    <li class="current-item"><%= link_to "Home", root_url %></li>
    <% unless signed_in? %>
    <li><%= link_to "Login", sign_in_path %></li>
    <li><%= link_to "Signup", sign_up_path %></li>
    <% else %>
    <li><%= button_to "Sign out", sign_out_path, method: :delete %>
    <% end %>

    <li><%= link_to "About Us", "#about-us" %></li>
  </ul>
</nav>

<%= form_tag(search_path, :method => "post", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Listings" %>
    <%= submit_tag "Search", :name => nil %>

    <% if @listings.blank? %>
        <h4>There are no listings containing the term <%= params[:search] %>.</h4>
    <% end %>
<% end %>